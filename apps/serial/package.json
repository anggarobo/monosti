{
  "name": "@apps/serial",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n MAIN,RENDERER -c yellow,cyan \"pnpm dev:main\" \"pnpm dev:renderer\" \"pnpm dev:electron\"",
    "dev:main": "tsc -w -p main",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && electron dist/main/index.js",
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer",
    "build:main": "tsc -p main",
    "build:preload": "tsc -p preload",
    "build:renderer": "vite build --config renderer/vite.config.ts"
  },
  "dependencies": {
    "electron": "^29.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.4"
  }
}
